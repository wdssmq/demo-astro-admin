---
interface Props {
    title: string;
}

const { title } = Astro.props;
import "../styles/style.less";
import Sidebar from "./Sidebar.astro";
import Header from "./Header.astro";
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" href="/favicon.ico" />
  </head>
  <body>
    <div class="wrapper">
      <Sidebar />
      <div class="fademask"></div>
      <div class="main">
          <Header />
        <div class="content">
          <slot />
        </div>
      </div>
    </div>

    <script src="/scripts/jquery-latest.min.js" is:inline></script>
    <script src="/scripts/common.js" is:inline></script>
  </body>
</html>
